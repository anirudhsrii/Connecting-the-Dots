# Copy to `.env` and fill values you plan to use

# Core API Keys
ADOBE_CLIENT_ID=
GOOGLE_API_KEY=
GEMINI_API_KEY=

# TTS Provider Configuration
# Options: edge_tts | hf_dia | pyttsx3 | google | gemini
TTS_PROVIDER=gemini

# Google Cloud Text-to-Speech (if TTS_PROVIDER=google)
GOOGLE_TTS_SERVICE_ACCOUNT_JSON=
GOOGLE_TTS_VOICE_A=en-US-Neural2-C
GOOGLE_TTS_VOICE_B=en-GB-Neural2-B
GOOGLE_TTS_AUDIO_ENCODING=MP3

# Gemini TTS (recommended)
GEMINI_TTS_MODEL=gemini-2.5-flash-preview-tts
GEMINI_VOICE_A=Charon
GEMINI_VOICE_B=Puck

# Edge TTS (fallback)
EDGE_TTS_VOICE_A=en-US-GuyNeural
EDGE_TTS_VOICE_B=en-GB-SoniaNeural
EDGE_TTS_VOICE_DEFAULT=en-US-AriaNeural

# PyTTSx3 TTS
PYTTSX3_VOICE=

# Server Configuration
UVICORN_HOST=127.0.0.1
UVICORN_PORT=8001

# External APIs (optional)
HUGGINGFACE_API_TOKEN=
TAVILY_API_KEY=
BING_SEARCH_API_KEY=

# Application Settings
INSIGHTS_DEFAULT=cross
CROSS_INSIGHTS_MAX_PER_DOC=6
CROSS_INSIGHTS_DEEP=true
TTS_WORKERS=2
BG_WORKERS=4
